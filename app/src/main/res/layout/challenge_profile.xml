<?xml version="1.0" encoding="utf-8"?>
<layout
    android:id="@+id/container"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <import type="androidx.lifecycle.LiveData"/>
        <import type="com.hfaria.portfolio.codewars.domain.ChallengeProfile" />

        <variable
            name="viewmodel"
            type="com.hfaria.portfolio.codewars.ui.challenge_profile.ChallengeProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_900"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:context=".ui.challenge_profile.ChallengeProfileActivity">

            <TextView
                android:id="@+id/tv_challenge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.profile.name}"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_challenge_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{viewmodel.profile.description}"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_challenge_name"
                app:layout_constraintLeft_toLeftOf="parent" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/cpi_fetching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminate="true"
                android:visibility="@{viewmodel.isLoading ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>